<%- include('partials/header.ejs')%>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">
            Bem vindo!
        </h1>

        <p class="lead">
            Este é um blog desenvolvido em nodeJs
        </p>

        <hr class="my-4">

        <p>
            Desenvolvi esse site com intuito de entender um pouco mais de técnologias web
            e como elas funcionam.
        </p>
    </div>

    <div>
        <% if (articles.length > 0) { %>
            <div class="mx-auto p-2" style="width: 300px">
                <h3>Ultimos artigos </h3>
            </div>
            <% articles.forEach((article) => { %>
                <div class="card">
                    <div class="card-header">
                        <h4><%= article.title %></h4>
                    </div>

                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-success">Detalhes</a>
                    </div>

                </div>
                <br>
                <% })%>
        <% } %>
    </div>
</div>

<%- include('partials/footer.ejs')%>
